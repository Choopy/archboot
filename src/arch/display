#!/bin/bash

_display_manager() {

    # XFCE or LXDE > LXDM
    if [[ ${desktop} == "xfce4" || ${desktop} == "lxde" ]]
    then
        _info "Enabling LXDM"
        _chroot "wget ${_url}/conf/lxdm.conf
        sed -i -e 's/_desktop_/${desktop}/g' lxdm.conf
        sed -i -e 's/_user_/${USER_name}/g' lxdm.conf
        mv lxdm.conf /etc/lxdm/lxdm.conf
        systemctl enable lxdm"

    # GNOME > GDM
    elif [[ ${desktop} == "gnome" ]]
    then
        _info "Enabling GDM"
        _chroot "systemctl enable gdm"

    # KDE > SDDM
    elif [[ ${desktop} == "kde" ]]
    then
        _info "Enabling SDDM"
        _chroot "systemctl enable sddm"

    # DEEPIN > LIGHTDM
    elif [[ ${desktop} == "deepin" ]]
    then
        _info "Enabling LightDM"
        _chroot "wget ${_url}/conf/lightdm.conf
        mv lightdm.conf /etc/lightdm/lightdm.conf
        systemctl enable lightdm"
    fi
}
