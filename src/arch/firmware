#!/bin/bash

_firmware() {

    # Firmware Detection
    _info "Firmware detection"
    if [ -d /sys/firmware/efi/efivars ]; then
        FIRMWARE="UEFI"
        part_table="GPT"
        part_code="g"
        part_type=""
        boot_filesystem="fat -F32"
        _note "UEFI firmware detected."
    else
        FIRMWARE="BIOS"
        part_table="MBR"
        part_code="o"
        part_type="p\n"
        boot_filesystem="ext4"
        _note "BIOS firmware detected."
    fi
    part_order=(0 1 2 3 4)

    # Home Detection
    #_info "Checking previous install"
}
