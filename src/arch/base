#!/bin/bash

#                        ARCH LINUX BASE SYSTEM
# ============================================================================
# Here we install base system with the chosen kernel of the user,
# all steps are described in the official documentation:
# https://wiki.archlinux.org/index.php/Installation_guide
# In case of Intel CPU we install intel microcode to enable microcode updates.
# If full rights given to user we add him to all groups & sudoers ALL power.
# ============================================================================

_base() {

    # Base System
    _info "Installing base with ${user-kernel} kernel"
    user_kernel="_${kernel}"
    yes '' | pacstrap /mnt ${_arch} ${!user_kernel}

    # fstab
    _info "Setting file systems table"
    genfstab -U -p /mnt >> /mnt/etc/fstab
    cat /mnt/etc/fstab

    # TimeZone
    _info "Setting ${timezone} timezone"
    ln -sf /usr/share/zoneinfo/${timezone} /mnt/etc/localtime

    # locale
    _info "Setting ${language}.UTF-8 locale"
    echo "${language}.UTF-8 UTF-8" >> /mnt/etc/locale.gen
    _chroot "locale-gen
    export LANG=${language}.UTF-8"
    echo "LANG=${language}.UTF-8" > /mnt/etc/locale.conf

    # keyboard
    _info "Setting ${keymap_code} vconsole"
    echo "KEYMAP=${keymap_code}" > /mnt/etc/vconsole.conf

    # hostname
    _info "Setting hostname ${HOST_name}"
    echo "${HOST_name}" > /mnt/etc/hostname

    # root passwd
    _info "Setting root password"
    _chroot "echo 'root:${ROOT_passwd}' | chpasswd"

    # network
    _info "Installing network manager"
    _chroot "pacman --noconfirm -S ${_netapps}
    systemctl enable NetworkManager"

    # Intel Microcode
    lscpu | grep "Intel" >/dev/null 2>&1
    if [[ $? -eq 0 ]]; then
        _info "Installing Intel CPU Microcode"
        _chroot "pacman --noconfirm -S ${_intel}"
    fi

    # user
    _info "Setting user ${USER_name}"
    _chroot "useradd -g users -m -s /bin/bash ${USER_name}
    echo '${USER_name}:${USER_passwd}' | chpasswd"
    if [[ ! -z ${power+x} ]]; then
        echo "${USER_name} ALL=(ALL) ALL" >> /mnt/etc/sudoers
    fi
}

