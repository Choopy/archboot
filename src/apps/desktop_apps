#!/bin/bash

#
# VGA DRIVER
#

# Intel
export _intel="xf86-video-intel vulkan-intel libva-intel-driver"

# AMD
export _amd="xf86-video-ati xf86-video-amdgpu vulkan-radeon"

# Nvidia
export _nvidia="xf86-video-nouveau"

# Default Driver
export _default="xf86-video-vesa"

# OpenGL
export openGL_x64="mesa"
export openGL_x86="lib32-mesa"
export hard_video="mesa-vdpau libva-vdpau-driver libvdpau-va-gl"

#
# DESKTOP ENVIRONMENT
#

# Gnome
export _gnome="gnome gnome-extra"

# Kde
export _kde="plasma kde-applications"

# Lxde
export _lxde="lxde"

# Xfce
export _xfce4="xfce4 xfce4-goodies lxdm"

# Deepin
export _deepin="deepin deepin-extra"

# Cinnamon
export _cinnamon="cinnamon lxdm"

# Budgie
export _budgie="budgie-desktop lxdm"

# Enlightenment
export _enlightenment="enlightenment terminology lxdm"

# Mate
export _mate="mate mate-extra lxdm"

# Lxqt
export _lxqt="lxqt lxdm"
