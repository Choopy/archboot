#!/bin/bash

#######################
### GLOBAL PACKAGES ###
#######################

# Intel Microcode
export _intel="intel-ucode"

# File system
export _file_system="gvfs gvfs-afc gvfs-goa gvfs-google gvfs-gphoto2 \
gvfs-mtp gvfs-nfs gvfs-smb gamin gparted ntfs-3g dosfstools exfat-utils \
file-roller ifuse fuseiso unrar"

# Fonts
export _fonts="xorg-fonts-type1 ttf-dejavu artwiz-fonts font-bh-ttf \
font-bitstream-speedo gsfonts sdl_ttf ttf-bitstream-vera \
ttf-cheapskate ttf-liberation ttf-freefont ttf-arphic-uming ttf-baekmuk"

###########################
### DESKTOP ENVIRONMENT ###
###########################

# Gnome Desktop
export _gnome="gnome gnome-extra"

# KDE Desktop
export _kde="plasma kde-applications"

# Lxde Desktop
export _lxde="lxde"

# Xfce Desktop
export _xfce="xfce4 xfce4-goodies lxdm"

#####################
### XFCE PACKAGES ###
#####################

# Multimedia
export _multimedia="pulseaudio pulseaudio-alsa pavucontrol gst-plugins-good \
gnome-mplayer vlc guvcview mediainfo-gui ffmpegthumbnailer"

# Docky
export _docky="docky"

# Accessories
export _accessories="gnome-calculator fbreader mupdf"

#########################
### OPTIONAL PACKAGES ###
#########################

# Firefox
export _firefox="firefox firefox-i18n-fr hunspell-fr"

# Flash
export _flash="flashplugin pepper-flash"

# Java
export _java="jre8-openjdk"

# Libreoffice
export _libreoffice="libreoffice libreoffice-fr"

# Gimp
export _gimp="gimp"

# Cups
export _cups="cups cups-pdf ghostscript gutenprint"

# Sane
export _sane="sane simple-scan"
