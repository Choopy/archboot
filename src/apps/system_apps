#!/bin/bash

# ArchLinux
export _arch="base base-devel"

# Microcode (in case of Intel CPU)
export _intel="intel-ucode"

# Network
export _netapps="ntp networkmanager wget nmap rp-pppoe dhclient \
iw wpa_supplicant wireless_tools git"

# Numlock on Bootup
export _numlock="numlockx"

# Bootloader
export _bootapps="grub os-prober gptfdisk efibootmgr"

# yaourt (in case of AUR support)
export _yaourtapps="yaourt customizepkg"

# Terminal
export _termapps="terminator"
