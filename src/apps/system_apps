#!/bin/bash

# ArchLinux
export _arch="base base-devel"

# Microcode (only for Intel CPU)
export _intel="intel-ucode"

# Network
export _netapps="networkmanager network-manager-applet rp-pppoe \
dhclient iw wpa_supplicant wireless_tools dialog"

# Required
export _requiredapps="ntp wget git htop nmap numlockx vim reflector"

# Bootloader
export _bootapps="grub os-prober gptfdisk efibootmgr"

# yaourt
export _yaourtapps="yaourt customizepkg"
